<rxui:ReactiveUserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rxui="http://reactiveui.net"
    xmlns:vm="using:UI.ViewModels"
    xmlns:controls="using:UI.Controls"
    x:TypeArguments="vm:DistributionDetailViewModel"
    x:Class="UI.Views.DistributionDetailView"
    x:DataType="vm:DistributionDetailViewModel">

    <Grid RowDefinitions="Auto,*">

        <!-- ── Distribution header ── -->
        <Border Grid.Row="0"
                Padding="16 12"
                BorderBrush="{StaticResource BorderSubtle}"
                BorderThickness="0 0 0 1"
                Background="{StaticResource BgPanel}">
            <Grid ColumnDefinitions="*,Auto">

                <StackPanel Grid.Column="0" Spacing="4">
                    <!-- Name + type badge -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding Name}"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <Border CornerRadius="4" Padding="7 3"
                                Background="{StaticResource BgElevated}">
                            <TextBlock Text="{Binding Type}"
                                       FontSize="11"
                                       Foreground="{StaticResource TextMuted}"/>
                        </Border>
                    </StackPanel>

                    <!-- Flags row -->
                    <StackPanel Orientation="Horizontal" Spacing="6" Margin="0 2 0 0">
                        <Border IsVisible="{Binding IsShop}"
                                CornerRadius="3" Padding="6 2"
                                Background="{StaticResource AccentMuted}">
                            <TextBlock Text="SHOP" FontSize="10"
                                       Foreground="{StaticResource AccentHover}"/>
                        </Border>
                        <Border IsVisible="{Binding DontSpawnAmmo}"
                                CornerRadius="3" Padding="6 2"
                                Background="{StaticResource BgElevated}">
                            <TextBlock Text="NO AMMO" FontSize="10"
                                       Foreground="{StaticResource TextMuted}"/>
                        </Border>
                    </StackPanel>

                    <!-- Quick stats -->
                    <StackPanel Orientation="Horizontal" Spacing="14" Margin="0 4 0 0">
                        <TextBlock FontSize="11" Foreground="{StaticResource TextMuted}">
                            <Run Text="Rolls: "/>
                            <Run Text="{Binding ItemRolls}"
                                 Foreground="{StaticResource TextSecondary}"/>
                        </TextBlock>
                        <TextBlock FontSize="11" Foreground="{StaticResource TextMuted}">
                            <Run Text="Containers: "/>
                            <Run Text="{Binding Containers.Count}"
                                 Foreground="{StaticResource TextSecondary}"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ── Container list ── -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="0 4 0 0">
            <ItemsControl ItemsSource="{Binding Containers}"
                          Margin="0 0 0 16">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="vm:ContainerViewModel">
                        <controls:ContainerControl Margin="0 2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</rxui:ReactiveUserControl>
