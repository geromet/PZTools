<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:UI.Controls"
        x:Class="UI.MainWindow"
        x:CompileBindings="False"
        Title="PZ Distribution Viewer"
        Width="1280" Height="800" MinWidth="900" MinHeight="500"
        Background="{StaticResource BgBase}"
        FontFamily="Inter,Segoe UI,system-ui,sans-serif">

    <Window.Styles>
        <Style Selector="Button.PanelClose">
            <Setter Property="Content" Value="×" />
            <Setter Property="Width" Value="18" />
            <Setter Property="Height" Value="18" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource TextMuted}" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0 4 4 0" />
            <Setter Property="ZIndex" Value="10" />
            <Setter Property="ToolTip.Tip" Value="Close panel" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ══ TOOLBAR ══ -->
        <Border Grid.Row="0"
                Background="{StaticResource BgPanel}"
                BorderBrush="{StaticResource BorderSubtle}"
                BorderThickness="0 0 0 1"
                Padding="12 6">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left"
                           Text="PZ Distributions"
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="13" FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0 0 16 0"/>

                <!-- File actions -->
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" Spacing="4">
                    <Button Content="&#x1F4C2;  Open Folder" Click="SelectFolder_Click"/>
                    <Button x:Name="SaveBtn"
                            Content="&#x1F4BE;  Save"
                            Click="Save_Click"
                            IsEnabled="False"
                            ToolTip.Tip="Save modified files (Ctrl+S)"/>
                    <Button Content="&#x27F3;  Reload"
                            Click="Reload_Click"
                            ToolTip.Tip="Re-parse current folder"/>
                </StackPanel>

                <!-- Undo / Redo -->
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal"
                            Spacing="4" Margin="12 0 0 0">
                    <Button x:Name="UndoBtn"
                            IsEnabled="False"
                            Click="UndoBtn_Click"
                            ToolTip.Tip="Nothing to undo">
                        <TextBlock Text="↩  Undo" Foreground="{StaticResource TextSecondary}"/>
                    </Button>
                    <Button x:Name="RedoBtn"
                            IsEnabled="False"
                            Click="RedoBtn_Click"
                            ToolTip.Tip="Nothing to redo">
                        <TextBlock Text="↪  Redo" Foreground="{StaticResource TextSecondary}"/>
                    </Button>
                </StackPanel>

                <!-- View menu -->
                <Menu DockPanel.Dock="Left" VerticalAlignment="Center" Margin="12 0 0 0">
                    <MenuItem Header="View">
                        <MenuItem x:Name="ViewListItem"  Header="✓ Distribution List" Click="ViewListItem_Click" />
                        <MenuItem x:Name="ViewErrorItem" Header="✓ Error List"        Click="ViewErrorItem_Click" />
                        <MenuItem x:Name="ViewRightItem" Header="✓ Properties"        Click="ViewRightItem_Click" />
                    </MenuItem>
                </Menu>

                <!-- Loading indicator -->
                <ProgressBar x:Name="LoadingBar"
                             DockPanel.Dock="Right"
                             IsIndeterminate="True"
                             IsVisible="False"
                             Width="80" Height="4"
                             Foreground="{StaticResource Accent}"
                             Background="Transparent"
                             Margin="8 0" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- ══ THREE-PANE BODY ══ -->
        <Grid x:Name="MainGrid"
              Grid.Row="1"
              ColumnDefinitions="260,4,*,4,260"
              RowDefinitions="*,4,160">

            <!-- LEFT — Distribution list -->
            <Grid x:Name="LeftPanelGrid" Grid.Column="0" Grid.RowSpan="3">
                <Border Background="{StaticResource BgPanel}"
                        BorderBrush="{StaticResource BorderSubtle}"
                        BorderThickness="0 0 1 0">
                    <controls:DistributionListControl x:Name="DistributionList" />
                </Border>
                <Button Classes="PanelClose" Click="CloseListBtn_Click" />
            </Grid>

            <GridSplitter x:Name="LeftSplitter"
                          Grid.Column="1" Grid.RowSpan="3"
                          ResizeDirection="Columns"
                          Background="{StaticResource BorderSubtle}"
                          HorizontalAlignment="Stretch"/>

            <!-- CENTER — Detail panel -->
            <Border Grid.Column="2" Grid.Row="0"
                    Background="{StaticResource BgBase}">
                <ContentControl x:Name="DetailPane"
                               HorizontalContentAlignment="Stretch"
                               VerticalContentAlignment="Stretch" />
            </Border>

            <GridSplitter x:Name="ErrorSplitter"
                          Grid.Column="2" Grid.Row="1"
                          ResizeDirection="Rows"
                          Background="{StaticResource BorderSubtle}"
                          HorizontalAlignment="Stretch"/>

            <!-- BOTTOM — Error list -->
            <Grid x:Name="ErrorPanelGrid" Grid.Column="2" Grid.Row="2">
                <Border Background="{StaticResource BgPanel}"
                        BorderBrush="{StaticResource BorderSubtle}"
                        BorderThickness="0 1 0 0">
                    <controls:ErrorListControl x:Name="ErrorList" />
                </Border>
                <Button Classes="PanelClose" Click="CloseErrorBtn_Click" />
            </Grid>

            <GridSplitter x:Name="RightSplitter"
                          Grid.Column="3" Grid.RowSpan="3"
                          ResizeDirection="Columns"
                          Background="{StaticResource BorderSubtle}"
                          HorizontalAlignment="Stretch"/>

            <!-- RIGHT — Properties panel -->
            <Grid x:Name="RightPanelGrid" Grid.Column="4" Grid.RowSpan="3">
                <Border Background="{StaticResource BgPanel}"
                        BorderBrush="{StaticResource BorderSubtle}"
                        BorderThickness="1 0 0 0">
                    <Grid RowDefinitions="Auto,*">
                        <Border Grid.Row="0" Padding="12 7"
                                BorderBrush="{StaticResource BorderSubtle}"
                                BorderThickness="0 0 0 1">
                            <TextBlock Text="PROPERTIES"
                                       FontSize="10" FontWeight="SemiBold" LetterSpacing="1.5"
                                       Foreground="{StaticResource TextMuted}" />
                        </Border>
                        <controls:DistributionDetailControl x:Name="RightDetail" Grid.Row="1" />
                    </Grid>
                </Border>
                <Button Classes="PanelClose" Click="CloseRightBtn_Click" />
            </Grid>
        </Grid>

        <!-- ══ STATUS BAR ══ -->
        <Border Grid.Row="2"
                Background="{StaticResource BgPanel}"
                BorderBrush="{StaticResource BorderSubtle}"
                BorderThickness="0 1 0 0"
                Padding="12 4">
            <DockPanel>
                <TextBlock x:Name="CountText"
                           DockPanel.Dock="Right"
                           Foreground="{StaticResource TextMuted}"
                           FontSize="11" VerticalAlignment="Center"
                           Margin="0 0 8 0"/>
                <TextBlock x:Name="StatusText"
                           Foreground="{StaticResource TextMuted}"
                           FontSize="11" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
