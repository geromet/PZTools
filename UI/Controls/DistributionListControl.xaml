<UserControl
    x:Class="UI.Controls.DistributionListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#FF1F1F1F"
    Foreground="#FFC2C2C2"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0" Background="#FF383838">
            <Button
                Background="#FF333333"
                BorderBrush="{x:Null}"
                Click="FilterButtonClick"
                Content="Rooms"
                Foreground="#FFD6D6D6"
                Tag="Room" />
            <Button
                Background="#FF333333"
                BorderBrush="{x:Null}"
                Click="FilterButtonClick"
                Content="Professions"
                Foreground="#FFD6D6D6"
                Tag="Profession" />
            <Button
                Background="#FF333333"
                BorderBrush="{x:Null}"
                Click="FilterButtonClick"
                Content="Bags"
                Foreground="#FFD6D6D6"
                Tag="Bag" />
            <Button
                Background="#FF333333"
                BorderBrush="{x:Null}"
                Click="FilterButtonClick"
                Content="Caches"
                Foreground="#FFD6D6D6"
                Tag="Cache" />
            <Button
                Background="#FF333333"
                BorderBrush="{x:Null}"
                Click="FilterButtonClick"
                Content="Procedural"
                Foreground="#FFD6D6D6"
                Tag="Procedural" />
        </ToolBar>
        <ListBox
            x:Name="Distributions"
            Grid.Row="1"
            Background="#FF1F1F1F"
            BorderBrush="{x:Null}"
            Foreground="#FFC2C2C2"
            ItemsSource="{Binding Distributions}"
            SelectionChanged="Distributions_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground="#FFC2C2C2" Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>