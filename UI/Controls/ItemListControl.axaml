<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UI.Controls.ItemListControl"
             x:CompileBindings="False">

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" ColumnDefinitions="*,65"
              Background="{StaticResource BgElevated}" Margin="0 0 0 1">
            <TextBlock Grid.Column="0" Text="Item" FontSize="11" FontWeight="SemiBold"
                       Foreground="{StaticResource TextMuted}" Margin="4 6" />
            <TextBlock Grid.Column="1" Text="Chance" FontSize="11" FontWeight="SemiBold"
                       Foreground="{StaticResource TextMuted}"
                       HorizontalAlignment="Right" Margin="0 6 4 6" />
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" MaxHeight="300">
            <StackPanel x:Name="RowsPanel" />
        </ScrollViewer>
    </Grid>
</UserControl>
