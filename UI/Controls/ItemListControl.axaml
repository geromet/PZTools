<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UI.Controls.ItemListControl"
             x:CompileBindings="False">

    <Grid RowDefinitions="Auto,*,Auto">
        <Grid Grid.Row="0" ColumnDefinitions="*,65"
              Background="{StaticResource BgElevated}" Margin="0 0 0 1">
            <TextBlock Grid.Column="0" Text="Item" FontSize="10" FontWeight="SemiBold"
                       Foreground="{StaticResource TextMuted}" Margin="4 3" />
            <TextBlock Grid.Column="1" Text="Chance" FontSize="10" FontWeight="SemiBold"
                       Foreground="{StaticResource TextMuted}"
                       HorizontalAlignment="Right" Margin="0 3 4 3" />
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" MaxHeight="300">
            <StackPanel x:Name="RowsPanel" />
        </ScrollViewer>

        <Button x:Name="AddItemBtn" Grid.Row="2"
                Content="+ Add Item"
                Click="AddItemBtn_Click"
                FontSize="11"
                Padding="6 3"
                Margin="4 4"
                HorizontalAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                Foreground="{StaticResource Accent}" />
    </Grid>
</UserControl>
