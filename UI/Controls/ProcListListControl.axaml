<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:data="using:DataInput.Data"
             xmlns:controls="using:UI.Controls"
             x:Class="UI.Controls.ProcListListControl"
             x:CompileBindings="False">

    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
        <ItemsControl x:Name="ItemsHost" Margin="8">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="data:ProcListEntry">
                    <controls:ProcListEntryControl />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>