<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UI.Controls.ProcListEntryControl"
             x:CompileBindings="False">

    <Border Background="{StaticResource BgElevated}"
            BorderBrush="{StaticResource BorderSubtle}"
            BorderThickness="1"
            Padding="9 6 8 6">
        <Grid ColumnDefinitions="120,*"
              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
              ColumnSpacing="4" RowSpacing="4">

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Distribution" Classes="FieldLabel" />
            <Button Grid.Row="0" Grid.Column="1"
                    Classes="NavLink"
                    Click="DistributionName_Click"
                    ToolTip.Tip="Open in Properties panel">
                <TextBlock x:Name="NameText"
                           FontSize="12.5" FontWeight="Medium"
                           Foreground="{StaticResource Accent}" />
            </Button>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Resolved" Classes="FieldLabel" />
            <TextBlock x:Name="ResolvedText" Grid.Row="1" Grid.Column="1"
                       FontSize="12" Foreground="{StaticResource TextSecondary}" />

            <Separator Grid.Row="2" Grid.ColumnSpan="2" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Min / Max" Classes="FieldLabel" />
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="4">
                <TextBox x:Name="MinBox" Width="60" LostFocus="MinBox_LostFocus" />
                <TextBlock HorizontalAlignment="Center" Text="&#x2013;" VerticalAlignment="Center"
                           Foreground="{StaticResource TextMuted}" Width="20"/>
                <TextBox x:Name="MaxBox" HorizontalAlignment="Right" Width="60" LostFocus="MaxBox_LostFocus" />
            </StackPanel>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Weight" Classes="FieldLabel" />
            <TextBox x:Name="WeightBox" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"
                     Width="156" LostFocus="WeightBox_LostFocus" />

            <TextBlock x:Name="ForceTilesLabel" Grid.Row="5" Grid.Column="0" Text="Force Tiles" Classes="FieldLabel" />
            <TextBox x:Name="ForceTilesBox" Grid.Row="5" Grid.Column="1"
                     TextWrapping="Wrap" LostFocus="ForceTilesBox_LostFocus" />

            <TextBlock x:Name="ForceRoomsLabel" Grid.Row="6" Grid.Column="0" Text="Force Rooms" Classes="FieldLabel" />
            <TextBox x:Name="ForceRoomsBox" Grid.Row="6" Grid.Column="1"
                     TextWrapping="Wrap" LostFocus="ForceRoomsBox_LostFocus" />

            <TextBlock x:Name="ForceItemsLabel" Grid.Row="7" Grid.Column="0" Text="Force Items" Classes="FieldLabel" />
            <TextBox x:Name="ForceItemsBox" Grid.Row="7" Grid.Column="1"
                     TextWrapping="Wrap" LostFocus="ForceItemsBox_LostFocus" />
        </Grid>
    </Border>

    <UserControl.Styles>
        <Style Selector="TextBlock.FieldLabel">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{StaticResource TextMuted}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.NavLink">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="MinHeight" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.NavLink:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="TextBlock.TextDecorations" Value="Underline" />
        </Style>
    </UserControl.Styles>
</UserControl>
