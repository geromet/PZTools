<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:UI.Controls"
             x:Class="UI.Controls.DistributionDetailControl"
             x:CompileBindings="False">

    <Grid>
        <!-- Empty state -->
        <StackPanel x:Name="EmptyPanel"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Spacing="8"
                    Margin="0 4 4 0">
            <TextBlock Text="No distribution selected"
                       FontSize="14"
                       Foreground="{StaticResource TextMuted}"
                       HorizontalAlignment="Center" />
            <TextBlock Text="Open a folder and select a distribution from the list."
                       FontSize="12"
                       Foreground="{StaticResource TextMuted}"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Detail view -->
        <Grid x:Name="DetailPanel" IsVisible="False" RowDefinitions="Auto,Auto,*">

            <!-- Distribution header -->
            <Border Grid.Row="0"
                    Padding="4"
                    BorderBrush="{StaticResource BorderSubtle}"
                    BorderThickness="0"
                    Background="{StaticResource BgPanel}"
                    Margin="0 ">
                <StackPanel Spacing="4">
                    <!-- Name + type badge -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock x:Name="HeaderName"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}" />
                        <Border CornerRadius="4" Padding="4 4"
                                Background="{StaticResource BgElevated}">
                            <TextBlock x:Name="HeaderType"
                                       FontSize="11"
                                       Foreground="{StaticResource TextMuted}" />
                        </Border>
                    </StackPanel>

                    <!-- Editable settings row -->
                    <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*"
                          RowDefinitions="Auto"
                          Margin="0 4 0 0" ColumnSpacing="10">

                        <TextBlock Grid.Column="0" Text="Rolls" Classes="HeaderLabel" />
                        <TextBox x:Name="RollsBox" Grid.Column="1"
                                 Width="50" FontSize="11" Padding="4 2"
                                 LostFocus="RollsBox_LostFocus" />

                        <CheckBox x:Name="ShopCheck" Grid.Column="2"
                                  Content="Shop" FontSize="11"
                                  IsCheckedChanged="ShopCheck_IsCheckedChanged" />

                        <CheckBox x:Name="NoAmmoCheck" Grid.Column="3"
                                  Content="No Ammo" FontSize="11"
                                  IsCheckedChanged="NoAmmoCheck_IsCheckedChanged" />

                        <TextBlock x:Name="MaxMapLabel" Grid.Column="4" Text="MaxMap" Classes="HeaderLabel" />
                        <TextBox x:Name="MaxMapBox" Grid.Column="5"
                                 Width="50" FontSize="11" Padding="4 2"
                                 LostFocus="MaxMapBox_LostFocus" />

                        <TextBlock x:Name="StashLabel" Grid.Column="6" Text="Stash%" Classes="HeaderLabel" />
                        <TextBox x:Name="StashBox" Grid.Column="7"
                                 Width="50" FontSize="11" Padding="4 2"
                                 LostFocus="StashBox_LostFocus" />

                        <TextBlock Grid.Column="8" FontSize="11" Foreground="{StaticResource TextMuted}">
                            <Run Text="Containers: " />
                            <Run x:Name="HeaderContainerCount" Foreground="{StaticResource TextSecondary}" />
                        </TextBlock>
                        <TextBlock x:Name="HeaderDirectItems" Grid.Column="9"
                                   FontSize="11" Foreground="{StaticResource TextMuted}"
                                   IsVisible="False">
                            <Run Text="Items: " />
                            <Run x:Name="HeaderDirectItemCount" Foreground="{StaticResource TextSecondary}" />
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Toolbar: expand/collapse + container filters -->
            <Border x:Name="ToolbarPanel" Grid.Row="1"
                    Padding="8 4"
                    BorderBrush="{StaticResource BorderSubtle}"
                    BorderThickness="0 0 0 1">
                <WrapPanel Orientation="Horizontal">
                    <Button Classes="FilterPill" Content="Expand All" Click="ExpandAll_Click" Margin="2" />
                    <Button Classes="FilterPill" Content="Collapse All" Click="CollapseAll_Click" Margin="2" />
                    <Button x:Name="ShowEmptyBtn" Classes="FilterPill" Content="Show Empty" Click="ShowEmpty_Click" Margin="2"
                            ToolTip.Tip="Show empty Items/Junk/ProcList columns for editing" />
                    <Border Width="1" Background="{StaticResource BorderSubtle}" Margin="6 2" />
                    <Button x:Name="AutoFilterBtn" Classes="FilterPill" Content="Auto Filter" Click="AutoFilter_Click" Margin="2"
                            ToolTip.Tip="Mirror content filters from distribution list" />
                    <Button Classes="FilterPill" Content="Clear" Click="ClearFilters_Click" Margin="2"
                            ToolTip.Tip="Clear all container filters" />
                    <Border Width="1" Background="{StaticResource BorderSubtle}" Margin="6 2" />
                    <WrapPanel x:Name="ContainerFilterPills" Orientation="Horizontal">
                        <Button Classes="FilterPill" Content="Proc List" Tag="ProcList" Click="ContainerFilterPill_Click" Margin="2" />
                        <Button Classes="FilterPill" Content="Rolls" Tag="Rolls" Click="ContainerFilterPill_Click" Margin="2" />
                        <Button Classes="FilterPill" Content="Items" Tag="Items" Click="ContainerFilterPill_Click" Margin="2" />
                        <Button Classes="FilterPill" Content="Junk" Tag="Junk" Click="ContainerFilterPill_Click" Margin="2" />
                        <Button Classes="FilterPill" Content="Procedural" Tag="Procedural" Click="ContainerFilterPill_Click" Margin="2" />
                        <Button Classes="FilterPill" Content="Invalid" Tag="Invalid" Click="ContainerFilterPill_Click" Margin="2" />
                    </WrapPanel>
                </WrapPanel>
            </Border>

            <!-- Body: direct items + containers -->
            <ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="0 4 0 0">
                <StackPanel Margin="0 0 0 16">

                    <!-- Distribution-level items (procedural distributions, top-level bags, etc.) -->
                    <Border x:Name="DirectItemsPanel"
                            IsVisible="False"
                            Margin="8 2"
                            CornerRadius="6"
                            Background="{StaticResource BgSurface}"
                            BorderBrush="{StaticResource BorderSubtle}"
                            BorderThickness="1"
                            ClipToBounds="True">
                        <Expander IsExpanded="True" Padding="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                            <Expander.Header>
                                <Grid ColumnDefinitions="*,Auto,Auto" Margin="4 0">
                                    <TextBlock Grid.Column="0"
                                               Text="(distribution items)"
                                               FontSize="12.5" FontWeight="Medium"
                                               Foreground="{StaticResource TextMuted}"
                                               FontStyle="Italic"
                                               VerticalAlignment="Center" />
                                    <Border Grid.Column="1" CornerRadius="3" Padding="6 2" Margin="6 0 0 0"
                                            Background="{StaticResource BgInput}"
                                            ToolTip.Tip="Item rolls">
                                        <TextBlock x:Name="DirectRollsBadge"
                                                   FontSize="11" Foreground="{StaticResource TextMuted}" />
                                    </Border>
                                    <Border Grid.Column="2" CornerRadius="3" Padding="6 2" Margin="4 0 0 0"
                                            Background="{StaticResource BgInput}"
                                            ToolTip.Tip="Unique items">
                                        <TextBlock x:Name="DirectCountBadge"
                                                   FontSize="11" Foreground="{StaticResource TextMuted}" />
                                    </Border>
                                </Grid>
                            </Expander.Header>
                            <TabControl Margin="0">
                                <TabItem Header="Items">
                                    <controls:ItemListControl x:Name="DistItemsControl" />
                                </TabItem>
                                <TabItem x:Name="JunkTab" Header="Junk">
                                    <controls:ItemListControl x:Name="DistJunkControl" />
                                </TabItem>
                            </TabControl>
                        </Expander>
                    </Border>

                    <!-- Sub-containers -->
                    <StackPanel x:Name="ContainersPanel" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>

    <UserControl.Styles>
        <Style Selector="Expander /template/ ToggleButton">
            <Setter Property="Padding" Value="10 8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <Style Selector="TextBlock.HeaderLabel">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="{StaticResource TextMuted}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Styles>
</UserControl>
