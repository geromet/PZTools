<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:UI.Controls"
             x:Class="UI.Controls.DistributionDetailControl"
             x:CompileBindings="False">

    <Grid>
        <!-- Empty state -->
        <StackPanel x:Name="EmptyPanel"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Spacing="8">
            <TextBlock Text="No distribution selected"
                       FontSize="14"
                       Foreground="{StaticResource TextMuted}"
                       HorizontalAlignment="Center" />
            <TextBlock Text="Open a folder and select a distribution from the list."
                       FontSize="12"
                       Foreground="{StaticResource TextMuted}"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Detail view -->
        <Grid x:Name="DetailPanel" IsVisible="False" RowDefinitions="Auto,*">

            <!-- Distribution header -->
            <Border Grid.Row="0"
                    Padding="16 4"
                    BorderBrush="{StaticResource BorderSubtle}"
                    BorderThickness="2 2 2 2"
                    Background="{StaticResource BgPanel}">
                <StackPanel Spacing="4">
                    <!-- Name + type badge -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock x:Name="HeaderName"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}" />
                        <Border CornerRadius="4" Padding="4 4"
                                Background="{StaticResource BgElevated}">
                            <TextBlock x:Name="HeaderType"
                                       FontSize="11"
                                       Foreground="{StaticResource TextMuted}" />
                        </Border>
                    </StackPanel>

                    <!-- Flags row -->
                    <StackPanel Orientation="Horizontal" Spacing="6" Margin="0 2 0 0">
                        <Border x:Name="ShopBadge"
                                IsVisible="False"
                                CornerRadius="3" Padding="6 2"
                                Background="{StaticResource AccentMuted}">
                            <TextBlock Text="SHOP" FontSize="10"
                                       Foreground="{StaticResource AccentHover}" />
                        </Border>
                        <Border x:Name="NoAmmoBadge"
                                IsVisible="False"
                                CornerRadius="3" Padding="6 2"
                                Background="{StaticResource BgElevated}">
                            <TextBlock Text="NO AMMO" FontSize="10"
                                       Foreground="{StaticResource TextMuted}" />
                        </Border>
                    </StackPanel>

                    <!-- Quick stats -->
                    <StackPanel Orientation="Horizontal" Spacing="14" Margin="0 4 0 0">
                        <TextBlock FontSize="11" Foreground="{StaticResource TextMuted}">
                            <Run Text="Rolls: " />
                            <Run x:Name="HeaderRolls" Foreground="{StaticResource TextSecondary}" />
                        </TextBlock>
                        <TextBlock FontSize="11" Foreground="{StaticResource TextMuted}">
                            <Run Text="Containers: " />
                            <Run x:Name="HeaderContainerCount" Foreground="{StaticResource TextSecondary}" />
                        </TextBlock>
                        <TextBlock x:Name="HeaderDirectItems"
                                   FontSize="11" Foreground="{StaticResource TextMuted}"
                                   IsVisible="False">
                            <Run Text="Items: " />
                            <Run x:Name="HeaderDirectItemCount" Foreground="{StaticResource TextSecondary}" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Body: direct items + containers -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="0 4 0 0">
                <StackPanel Margin="0 0 0 16">

                    <!-- Distribution-level items (procedural distributions, top-level bags, etc.) -->
                    <Border x:Name="DirectItemsPanel"
                            IsVisible="False"
                            Margin="8 2"
                            CornerRadius="6"
                            Background="{StaticResource BgSurface}"
                            BorderBrush="{StaticResource BorderSubtle}"
                            BorderThickness="1"
                            ClipToBounds="True">
                        <Expander IsExpanded="True" Padding="0" HorizontalContentAlignment="Stretch">
                            <Expander.Header>
                                <Grid ColumnDefinitions="*,Auto,Auto" Margin="4 0">
                                    <TextBlock Grid.Column="0"
                                               Text="(distribution items)"
                                               FontSize="12.5" FontWeight="Medium"
                                               Foreground="{StaticResource TextMuted}"
                                               FontStyle="Italic"
                                               VerticalAlignment="Center" />
                                    <Border Grid.Column="1" CornerRadius="3" Padding="6 2" Margin="6 0 0 0"
                                            Background="{StaticResource BgInput}"
                                            ToolTip.Tip="Item rolls">
                                        <TextBlock x:Name="DirectRollsBadge"
                                                   FontSize="11" Foreground="{StaticResource TextMuted}" />
                                    </Border>
                                    <Border Grid.Column="2" CornerRadius="3" Padding="6 2" Margin="4 0 0 0"
                                            Background="{StaticResource BgInput}"
                                            ToolTip.Tip="Unique items">
                                        <TextBlock x:Name="DirectCountBadge"
                                                   FontSize="11" Foreground="{StaticResource TextMuted}" />
                                    </Border>
                                </Grid>
                            </Expander.Header>
                            <TabControl Margin="0">
                                <TabItem Header="Items">
                                    <controls:ItemListControl x:Name="DistItemsControl" />
                                </TabItem>
                                <TabItem x:Name="JunkTab" Header="Junk">
                                    <controls:ItemListControl x:Name="DistJunkControl" />
                                </TabItem>
                            </TabControl>
                        </Expander>
                    </Border>

                    <!-- Sub-containers -->
                    <StackPanel x:Name="ContainersPanel" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>

    <UserControl.Styles>
        <Style Selector="Expander /template/ ToggleButton">
            <Setter Property="Padding" Value="10 8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
    </UserControl.Styles>
</UserControl>
