<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:UI.ViewModels"
             xmlns:data="using:DataInput.Data"
             xmlns:controls="using:UI.Controls"
             x:Class="UI.Controls.ContainerControl"
             x:DataType="vm:ContainerViewModel">

    <Border Margin="8 2"
            CornerRadius="6"
            Background="{StaticResource BgSurface}"
            BorderBrush="{StaticResource BorderSubtle}"
            BorderThickness="1"
            ClipToBounds="True">

        <Expander IsExpanded="False" Padding="0">

            <!-- Header: name + quick stats badges -->
            <Expander.Header>
                <Grid ColumnDefinitions="*,Auto,Auto,Auto" Margin="4 0">
                    <TextBlock Grid.Column="0"
                               Text="{Binding Name}"
                               FontSize="12.5" FontWeight="Medium"
                               Foreground="{StaticResource TextPrimary}"
                               VerticalAlignment="Center"/>
                    <Border Grid.Column="1" CornerRadius="3" Padding="6 2" Margin="6 0 0 0"
                            Background="{StaticResource BgInput}"
                            ToolTip.Tip="Item rolls">
                        <TextBlock Text="{Binding ItemRolls, StringFormat='↻ {0}'}"
                                   FontSize="11" Foreground="{StaticResource TextMuted}"/>
                    </Border>
                    <Border Grid.Column="2" CornerRadius="3" Padding="6 2" Margin="4 0 0 0"
                            Background="{StaticResource BgInput}"
                            ToolTip.Tip="Unique items">
                        <TextBlock Text="{Binding ItemChances.Count, StringFormat='⊞ {0}'}"
                                   FontSize="11" Foreground="{StaticResource TextMuted}"/>
                    </Border>
                    <Border Grid.Column="3"
                            IsVisible="{Binding Procedural}"
                            CornerRadius="3" Padding="6 2" Margin="4 0 0 0"
                            Background="#4F4A2A">
                        <TextBlock Text="PROC" FontSize="10"
                                   Foreground="{StaticResource TextSecondary}"/>
                    </Border>
                </Grid>
            </Expander.Header>

            <!-- Tabs: all edits flow back to ContainerViewModel and are undoable -->
            <TabControl Margin="0">

                <TabItem Header="Settings">
                    <Grid ColumnDefinitions="Auto,*"
                          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                          Margin="12 8" ColumnSpacing="12" RowSpacing="6">

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Rolls"       Classes="FieldLabel"/>
                        <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding ItemRolls}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Junk Rolls"  Classes="FieldLabel"/>
                        <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding JunkRolls}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Fill Random" Classes="FieldLabel"/>
                        <CheckBox  Grid.Row="2" Grid.Column="1" IsChecked="{Binding FillRand}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Procedural"  Classes="FieldLabel"/>
                        <CheckBox  Grid.Row="3" Grid.Column="1" IsChecked="{Binding Procedural}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="No Ammo"     Classes="FieldLabel"/>
                        <CheckBox  Grid.Row="4" Grid.Column="1" IsChecked="{Binding DontSpawnAmmo}"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Items">
                    <controls:ItemListControl ItemsSource="{Binding ItemChances}"/>
                </TabItem>

                <TabItem Header="Junk">
                    <controls:ItemListControl ItemsSource="{Binding JunkChances}"/>
                </TabItem>

                <TabItem Header="Proc Lists">
                    <controls:ProcListListControl ItemsSource="{Binding ProcListEntries}"/>
                </TabItem>
            </TabControl>
        </Expander>
    </Border>

    <UserControl.Styles>
        <Style Selector="TextBlock.FieldLabel">
            <Setter Property="Foreground"        Value="{StaticResource TextMuted}"/>
            <Setter Property="FontSize"          Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="Expander /template/ ToggleButton">
            <Setter Property="Padding" Value="10 8"/>
        </Style>
    </UserControl.Styles>
</UserControl>
