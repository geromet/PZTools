<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="UI.HelpWindow"
        x:CompileBindings="False"
        Title="PZTools Help"
        Width="780" Height="560" MinWidth="540" MinHeight="400"
        Background="{StaticResource BgBase}"
        FontFamily="Inter,Segoe UI,system-ui,sans-serif"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="Full"
        CanResize="True">

    <Grid ColumnDefinitions="200,1,*">

        <!-- ── Sidebar ── -->
        <Border Grid.Column="0"
                Background="{StaticResource BgPanel}"
                Padding="0 8">
            <Grid RowDefinitions="Auto,*">
                <StackPanel Grid.Row="0" Margin="16 8 16 12">
                    <TextBlock Text="HELP"
                               FontSize="10" FontWeight="SemiBold" LetterSpacing="1.5"
                               Foreground="{StaticResource TextMuted}" />
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="TopicList" SelectionChanged="TopicList_SelectionChanged">
                        <ListBoxItem Tag="welcome"     Content="Welcome" />
                        <ListBoxItem Tag="getting-started" Content="Getting Started" />
                        <ListBoxItem Tag="dist-list"   Content="Distribution Explorer" />
                        <ListBoxItem Tag="filters"     Content="Filters" />
                        <ListBoxItem Tag="detail-view" Content="Detail View" />
                        <ListBoxItem Tag="containers"  Content="Containers" />
                        <ListBoxItem Tag="editing"     Content="Editing" />
                        <ListBoxItem Tag="saving"      Content="Saving" />
                        <ListBoxItem Tag="error-list"  Content="Error List" />
                        <ListBoxItem Tag="shortcuts"   Content="Keyboard Shortcuts" />
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ── Divider ── -->
        <Border Grid.Column="1" Background="{StaticResource BorderSubtle}" />

        <!-- ── Content ── -->
        <Border Grid.Column="2" Background="{StaticResource BgBase}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24 16 24 24">
                <StackPanel x:Name="ContentPanel" Spacing="0" MaxWidth="520" />
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
